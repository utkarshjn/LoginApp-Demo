<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.utkarsh.myloginapp.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signInLayout"
        android:visibility="invisible"
        android:paddingBottom="50dp"
        android:paddingEnd="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:background="@android:color/holo_green_light">

        <TextView
            android:text="Now Please Sign In"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/details2Text"
            android:textSize="36sp"
            android:textAlignment="center"
            android:layout_marginBottom="80dp"
            android:padding="5dp"
            android:fontFamily="cursive"
            android:textColor="@android:color/black"
            android:background="@android:color/holo_red_light" />

        <TextView
            android:text="Enter Your Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:id="@+id/name2Text"
            android:paddingBottom="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/name2EditText"
            android:background="@android:drawable/edit_text"
            android:textSize="20sp"
            android:hint="Username" />

        <TextView
            android:text="Enter Your Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pass2Text"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/pass2EditText"
            android:background="@android:drawable/edit_text"
            android:textSize="20sp"
            android:hint="Password" />

        <Button
            android:text="Log In"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="133dp"
            android:onClick="signIn"
            android:background="@android:drawable/button_onoff_indicator_off"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/signUpLayout"
        android:visibility="visible"
        android:background="@android:color/holo_red_light"
        android:padding="10dp">

        <TextView
            android:text="Welcome to MyLogin App "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/welcomeText"
            android:textAlignment="center"
            android:textSize="34sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:padding="5dp"
            android:background="@android:color/holo_orange_light"
            android:textColor="@android:color/black"
            android:fontFamily="cursive" />

        <TextView
            android:text="Please enter the following details to sign up "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:id="@+id/detailsText"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_below="@+id/welcomeText"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp"
            android:background="@android:color/holo_orange_light"
            android:textColor="@android:color/black"
            android:padding="3dp" />

        <TextView
            android:text="Enter Your Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:id="@+id/nameText"
            android:paddingBottom="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nameEditText"
            android:background="@android:drawable/edit_text"
            android:textSize="20sp"
            android:hint="Username" />

        <TextView
            android:text="Enter Your Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passText"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passEditText"
            android:background="@android:drawable/edit_text"
            android:textSize="20sp"
            android:hint="Password" />

        <TextView
            android:text="Re-enter Your Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/repassText"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/repassEditText"
            android:background="@android:drawable/edit_text"
            android:textSize="20sp"
            android:hint="Password" />

        <Button
            android:text="Sign Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button0"
            android:layout_marginTop="15dp"
            android:onClick="signUp"
            android:layout_marginLeft="130dp"
            android:background="@android:drawable/button_onoff_indicator_on"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>
